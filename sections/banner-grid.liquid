{% if section.settings.banner_grid_style == 'banner_grid_style_1' %}
<!-- START SECTION BANNER -->
<div class="section pb_20" data-section="lazyloadsection" id="section-{{ section.id }}">
	<div class="container{% if section.settings.fullwidth_on %}-fluid{% endif %}">
    	<div class="row">
          {%- for block in section.blocks -%}{%- case block.type -%}
      	  {%- when 'banner' -%}{%- assign bset = block.settings -%}
        	<div class="col-lg-{{ bset.ban_col_lg }} col-md-{{ bset.ban_col }} block_{{ block.id }}">
            	<div class="single_banner">
                    {%- if bset.img1 -%}
                    <img class="animated lazyload" src="{{ bset.img1 | img_url: 'original' }}" alt="{{ image.alt }}">              
                    {%- else -%}
                    <img class="animated lazyload" src="https://via.placeholder.com/540x300" alt="{{ image.alt }}">
                    {%- endif -%}
                    <div class="single_banner_info">
                      	{%- if bset.tt2 != '' -%}
                      	<h3 class="single_bn_title">{{ bset.tt2 }}</h3>
                      	{%- endif -%}
                      	{%- if bset.t1 != '' -%}
                        <h5 class="single_bn_title1">{{ bset.t1 }}</h5>
                      	{%- endif -%}
                      	{%- if bset.t2 != '' -%}
                        <h3 class="single_bn_title">{{ bset.t2 }}</h3>
                      	{%- endif -%}
                      	{%- if bset.st1 != '' -%}
                      	<h4 class="single_bn_title1">{{ bset.st1 }}</h4>
                      	{%- endif -%}
                      	{%- if bset.btn1 != '' -%}
                        <a href="{{ bset.btn1_url }}" class="single_bn_link">{{ bset.btn1 }}</a>
                      	{%- endif -%}
                    </div>
                </div>
              
              {% style %}
              .block_{{ block.id }} .single_banner_info h3 {
              	color: {{ bset.t1_color }};
              }
              .block_{{ block.id }} .single_banner_info h4 {
              	color: {{ bset.st2_color }};
              }
              .block_{{ block.id }} .single_banner_info h5 {
              	color: {{ bset.st_color }};
              }
              .block_{{ block.id }} .single_banner_info a {
              	color: {{ bset.btn1_color }};
              }
              .block_{{ block.id }} .single_banner_info a:hover {
              	color: {{ bset.btn1_hover_color }};
              }
              {% endstyle %}
              
            </div>
          
          {%- endcase -%}{%- endfor -%}

        </div>
    </div>
</div>
