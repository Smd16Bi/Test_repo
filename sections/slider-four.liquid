<!-- START SECTION BANNER -->
<div class="banner_section full_screen staggered-animation-wrap" id="section-{{ section.id }}">
    <div id="carouselExampleControls" class="carousel slide carousel-fade light_arrow carousel_style2" data-ride="carousel" data-interval="{{ section.settings.slider_on_off }}">
        <div class="carousel-inner">          	
            {% for block in section.blocks %}
            {% case block.type %}
            {% when 'slide' %}
            <div class="carousel-item background_bg overlay_bg_50"  data-img-src="{% if block.settings.slider_bg_img %}{{ block.settings.slider_bg_img | img_url: 'master' }}{% else %}http:\/\/via.placeholder.com\/1920x1280{% endif %}" style="background-image: url({% if block.settings.slider_bg_img %}{{ block.settings.slider_bg_img | img_url: 'master' }}{% else %}http:\/\/via.placeholder.com\/1920x1280{% endif %});">
                <div class="banner_slide_content banner_content_inner">
                	<div class="container">
                      <div class="row justify-content-center">
                        <div class="col-lg-7 col-md-10">
                          <div id="block-{{ block.id }}" class="banner_content text_white text-center">
                            {%if block.settings.slider_sub_title != '' %}
                            <h5 class="mb-3 bg_strip staggered-animation text-uppercase" data-animation="fadeInDown" data-animation-delay="0.2s">{{ block.settings.slider_sub_title }}</h5>
                            {%endif%}
                            {%if block.settings.slider_title != '' %}
                            <h2 class="staggered-animation" data-animation="fadeInDown" data-animation-delay="0.3s">{{ block.settings.slider_title }}</h2>
                            {%endif%}
                            {%if block.settings.slider_content != '' %}
                            <p class="staggered-animation" data-animation="fadeInUp" data-animation-delay="0.4s">{{ block.settings.slider_content }}</p>
                            {%endif%} 
                            {%if block.settings.slider_button != '' %}
                            <a class="btn btn-white staggered-animation" href="{{ block.settings.slider_button_url }}" data-animation="fadeInUp" data-animation-delay="0.5s">{{ block.settings.slider_button }}</a>
                            {%endif%}  
                          </div>
                        </div>
                      </div>
                    </div>
                </div>
            </div>
          	{% endcase %}
      		{% endfor %}
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev"><i class="ion-chevron-left"></i></a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next"><i class="ion-chevron-right"></i></a>
    </div>
</div>
<!-- END SECTION BANNER -->


<script>
 
var $slider = $('.carousel-inner');
var $current = $slider.find('div.carousel-item.active');
var $next = $current.next();

if(!$next.length) {
    $next = $slider.find('div.carousel-item:first');
}

$current.removeClass('active');
$next.addClass('active');  
 
</script>

{%- include 'section-style' -%}


{%- style -%}


.ht-hero-slider .ht-single-slide {
    height: {{ section.settings.slider_height }}vh;
}

  {% for block in section.blocks %}
  {% case block.type %}
  {% when 'slide' %}

  #block-{{ block.id }}.banner_content h2 {
      color: {{ block.settings.slider_title_color }} !important;
      font-size: {{ block.settings.slider_title_size }} !important;
  }

  #block-{{ block.id }}.banner_content h5 {
      color: {{ block.settings.slider_subtitle_color }} !important;
      font-size: {{ block.settings.slider_sub_title_size }} !important;
  }

  #block-{{ block.id }}.banner_content p {
      color: {{ block.settings.slider_content_color }} !important;
      font-size: {{ block.settings.slider_content_size }} !important;
  }

  #block-{{ block.id }}.banner_content a {
      background: {{ block.settings.slider_btn_bg_color }} !important;
      border: 2px solid {{ block.settings.slider_btn_bc_color }} !important;
      color: {{ block.settings.slider_btn_color }} !important;
  }
  #block-{{ block.id }}.banner_content a:hover {
      color: {{ block.settings.slider_btn_color_hov }} !important;
      border-color: {{ block.settings.slider_btn_bc_color_hov }} !important;
      background: {{ block.settings.slider_btn_bg_color_hov }} !important;
  }

  {% endcase %}
  {% endfor %}

{%- endstyle -%}



