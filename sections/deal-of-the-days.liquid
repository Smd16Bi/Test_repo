<!-- START SECTION SHOP -->
<div class="section small_pt small_pb" data-section="owlcarouselajax" id="section-{{ section.id }}">
	<div class="container{% if section.settings.fullwidth_on %}-fluid{%endif%}">
    	<div class="row">
			<div class="col-md-12">
            	<div class="heading_tab_header">                  
                  	{% if section.settings.section_title != '' %}
                    <div class="heading_s2">
                        <h2>{{ section.settings.section_title }}</h2>
                    </div>
                  	{% endif %}
                  	{% if section.settings.offer_time != '' %}
                    <div class="deal_timer">
                    	<div class="countdown_time countdown_style1" data-time="{{ section.settings.offer_time }}"></div>
                    </div>
					{% endif %}
                </div>
            </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="deal_of_the_day product_slider carousel_slider owl-carousel owl-theme nav_style1" 
                 data-owl-carousel='{
                  "loop": true,
                  "dots": false,                  
                  "nav": true,
                  "margin": 20,                 
                  {%- if settings.rtl_enable -%}
                  "rtl": true, 
                  {%- endif -%}
                  "items": 4,
                  "navText": ["<i class=&#x27;ion-ios-arrow-left&#x27;></i>","<i class=&#x27;ion-ios-arrow-right&#x27;></i>"],
                  "responsive":{
                      "0":{"items": "1"}, 
                      "481":{"items": "2"}, 
                      "768":{"items": "3"}, 
                      "1199":{"items": "4"}
                  }}'>
              <!-- product-item start -->
              {% assign featured_product = collections[section.settings.featured_product_collection] %}
              {% assign featured_product_limit = section.settings.featured_product_limit_handle %}  

              {%- if featured_product == empty -%}
              {% assign a = 1 %}
              {% for i in (1..featured_product_limit) %}

              {% assign product_item = "product-" | append: a  %}
              {% assign a = a | plus: 1 %}
              <div class="item" style="margin-bottom: 30px;">
                <div>
                  <div>
                    {{ product_item | placeholder_svg_tag: 'product-svg-image' }}
                  </div>
                  <h6>
                    Product Title
                  </h6>
                  <div class="">
                    <span>$99.99</span>
                  </div>
                </div>
              </div>
              {% if a == 7 %}
              {% assign a = 1 %}
              {% endif %}
              {% endfor %}

              {%- else -%}
              {% for product in featured_product.products limit: featured_product_limit %}
              <div class="item">
                {% include 'product-grid-item' %}
              </div>
              {% endfor %}
              {%- endif -%}
            </div>
          </div>
        </div>
    </div>
</div>
<!-- END SECTION SHOP -->


