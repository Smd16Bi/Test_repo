<!-- START SECTION BLOG -->
<div class="section">
	<div class="container">
    	<div class="row {% if section.settings.sidebar_handle == 'left_sidebar_handle' %}flex-row-reverse{% endif %}">
            {%- assign blogs_limit = section.settings.blog_limit_handle -%}
            {%- paginate blog.articles by blogs_limit -%} 
            <div class="{% if section.settings.sidebar_handle == 'without_sidebar' %}col-lg-12{% else %}col-lg-9{% endif %}">
                <div class="row">
					{% for article in blog.articles %}
                    <div class="col-xl-{{ section.settings.blog_column_xl }} col-lg-{{ section.settings.blog_column_lg }} col-md-{{ section.settings.blog_column_md }} col-xs-{{ section.settings.blog_column_xs }}">
                        {% include 'blog-grid-item' %}
                    </div>
					{% endfor %}
                </div>
              	{%- if paginate.pages > 1 -%}
                <div class="row">
                    <div class="col-12 mt-2 mt-md-4">
                        {% include 'pagination' %}
                    </div>
                </div>
              	{%- endif -%}
            </div>
          	{%- endpaginate -%}
          	{%- unless section.settings.sidebar_handle == 'without_sidebar' -%}
        	<div class="col-lg-3 order-lg-first mt-4 pt-2 mt-lg-0 pt-lg-0">
            	{% include 'blog-sidebar' %}
            </div>
          	{%- endunless -%}
        </div>
    </div>
</div>
<!-- END SECTION BLOG -->

{% schema %}
  {
    "name": "Blog Page",
    "settings": [
		{
			"type": "header",
            "content": "Blog"
        },
		{
            "type": "range",
            "id": "blog_limit_handle",
            "min": 2,
            "max": 100,
            "step": 1,
            "label": "Post Limit",
            "default": 9,
			"info": "How many products are displayed on each page"
        },
		{
			"type": "header",
            "content": "Blog Column"
        },
		{
          "type": "select",
          "id": "blog_column_xl",
          "label": "Desktop Extra Large",
		  "options":[
