<!-- START LOGIN SECTION -->
<div class="login_register_wrap section customer-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-md-10">
                <div class="login_wrap">
            		<div id="CustomerLoginForm" class="padding_eight_all bg-white">
                        {% form 'customer_login' %}
                        {{ form.errors | default_errors }}
                        <div class="heading_s1">
                            <h3>{{ 'customer.login.title' | t }}</h3>
                            {%- if settings.login_sub_text != '' -%}
                            <p>{{ settings.login_sub_text }}</p>
                            {%- endif -%}
                        </div>
                        <div class="form-area login-form">
                            <div class="form-group">
                                <input type="email" name="customer[email]" id="CustomerEmail" class="form-control input-full{% if form.errors contains 'email' %} error{% endif %}" placeholder="{{ 'customer.login.email' | t }}" autocorrect="off" autocapitalize="off" autofocus>
                            </div>
                            <div class="form-group">
                              {% if form.password_needed %}
                              <input type="password" value="" name="customer[password]" id="CustomerPassword" class="form-control input-full{% if form.errors contains 'password' %} error{% endif %}" placeholder="{{ 'customer.login.password' | t }}">
                              {% endif %}
                            </div>
                            <div class="login_footer form-group">
                                {% if form.password_needed %}
                                <a href="#recover" id="RecoverPassword">{{ 'customer.login.forgot_password' | t }}</a>
                                {% endif %}
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-fill-out btn-block" name="login">{{ 'customer.login.sign_in' | t }}</button>
                            </div>
                        </div>
						<div class="form-note text-center">Don't Have an Account? {{ 'layout.customer.create_account' | t | customer_register_link }}</div>
                      	{% endform %}
                    </div>
                    <div id="RecoverPasswordForm" class="padding_eight_all bg-white" style="display: none;">
                      {% form 'recover_customer_password' %}
                      {{ form.errors | default_errors }}
                      {% if form.posted_successfully? %}
                      {% assign resetPassword = true %}
                      {% endif %}
                      <div class="login-form-container-area">
                        <div class="login-text">
                          <h2>{{ 'customer.recover_password.title' | t }}</h2>
                          <p>{{ 'customer.recover_password.subtext' | t }}</p>
                        </div>
                        <div class="login-form">
                          <div class="form-group">
                            <input type="email" value="" name="email" id="RecoverEmail" class="form-control input-full" placeholder="{{ 'customer.recover_password.email' | t }}" autocorrect="off" autocapitalize="off">
                          </div>
                          <div class="login-toggle-btn">
                            <div class="form-action-button">
                              <button type="submit" class="theme-default-button">{{ 'customer.recover_password.submit' | t }}</button>
                              <a href="#" id="HideRecoverPasswordLink">{{ 'customer.recover_password.cancel' | t }}</a>
                            </div>
                          </div>
                        </div>
                      </div>
                      {% endform %}
                    </div>
                    {% if shop.checkout.guest_login %}
                    <div id="guest-login">
                      <div class="guest-form-container">
                        <h2>{{ 'customer.login.guest_title' | t }}</h2>
                        {% form 'guest_login' %}
                        <input type="submit" class="theme-default-button" value="{{ 'customer.login.guest_continue' | t }}">
                        {% endform %}
                      </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END LOGIN SECTION -->





