{% comment %}
<div class="switcher-currency-trigger currency">
  <div class="currency-trigger"><a class="current-currency" href="#">{{ shop.currency }} </a><i class="fa fa-angle-down"></i>
  {% assign currency = settings.supported_currencies | split: '|' %}
  <select name="countries" class="custome_select switcher-dropdown" id="currencies">
    {% for value in currency %}
    {% assign array = value | split: ',' %}
    {% assign iso_4217 = array[0] | upcase | strip %}
    {% assign name = array[1] | strip %}
    <option data-currency="{{ iso_4217 }}" class="currency__item"><a style="cursor: pointer">{{ name }}</a></option>
    {% endfor %}
  </select>
  </div>
</div>
{% endcomment %}

<div class="switcher-currency-trigger currency">
  <ul>
    <li class="currency-trigger mr-3"><a class="current-currency" href="#">{{ shop.currency }} </a><i class="fa fa-angle-down"></i>
      {% assign currency = settings.supported_currencies | split: '|' %}
      <ul class="switcher-dropdown border shadow" id="currencies">
        {% for value in currency %}
        {% assign array = value | split: ',' %}
        {% assign iso_4217 = array[0] | upcase | strip %}
        {% assign name = array[1] | strip %}
        <li data-currency="{{ iso_4217 }}" class="currency__item"><a style="cursor: pointer">{{ name }}</a></li>
        {% endfor %}
      </ul>
    </li>
  </ul>    
</div>