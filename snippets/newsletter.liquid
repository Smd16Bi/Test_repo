{% if section.settings.newsletter_style == 'newsletter_style_1' %}
<!-- START SECTION SUBSCRIBE NEWSLETTER -->
<div class="section bg_default small_pt small_pb">
  <div class="container{% if section.settings.newsletter_fullwidth_on %}-fluid{%endif%}">	
    <div class="row align-items-center">
      {% if section.settings.newsletter_title != '' %}
      <div class="col-md-6">
        <div class="heading_s1 mb-md-0 heading_light">
          <h3>{{ section.settings.newsletter_title }}</h3>
          {% if section.settings.newsletter_desc != '' %}
          <p>{{ section.settings.newsletter_desc }}</p>
          {% endif %}
        </div>
      </div>
      {% endif %}
      <div class="col-md-6">
        {%- if settings.newsletter_system == 'by_shopify_form' -%}
          
          {%- assign formId = 'Contact_' | append: section.id -%}
          {%- form 'customer', id: formId -%}
          {%- if form.posted_successfully? -%}
          <p class="form-message form-message--success form-success">{{ 'general.newsletter_form.confirmation'| t }}</p>
          {%- else -%}
          
          {%- if form.errors -%}
          <div class="form-message form-message--error">
            {{ form.errors | default_errors }}
          </div>
          {%- endif -%}
         
          <div class="newsletter_form newsletter-form mc_embed_signup">
              <div id="mc_embed_signup_scroll" class="mc-form">
                <input type="hidden" name="contact[tags]" value="newsletter">
                <input class="email form-control rounded-0" type="email" name="contact[email]" id="Email" value="{% if customer %}{{ customer.email }}{% endif %}"
                   placeholder="{{ section.settings.email_placeholder }}" aria-label="{{ section.settings.email_placeholder }}" {% if form.errors %}aria-invalid="true"{% endif %} autocorrect="off" autocapitalize="off">
                <button id="Subscribe" type="submit" name="commit" class="default-btn btn btn-dark rounded-0">{{ section.settings.button_title }}</button>
            </div>
          </div>
          {%- endif -%}
          {%- endform -%}      

          
          {%- elsif settings.newsletter_system == 'by_mailchimp' -%}
          <div class="newsletter_form newsletter-form mc_embed_signup">
            <form action="{{ settings.newsletter_action }}" method="post" id="mc-form" name="mc-embedded-subscribe-form" class="validate newsletter-form validate" target="_blank" novalidate>
              <div id="mc_embed_signup_scroll" class="mc-form">
                <input type="email" value="" name="EMAIL" class="email form-control rounded-0" id="mce-EMAIL" placeholder="{{ section.settings.email_placeholder }}" required>
                <button id="mc-embedded-subscribe" type="submit" name="subscribe" class="default-btn btn btn-dark rounded-0">{{ section.settings.button_title }}</button>
              </div>
            </form> 
            <div class="mailchimp-alerts">
              <div class="mailchimp-submitting"></div>
              <div class="mailchimp-success"></div>
              <div class="mailchimp-error"></div>
            </div>
          </div>
          {%- endif -%}
      </div>
    </div>
  </div>
</div>
<!-- START SECTION SUBSCRIBE NEWSLETTER -->

<style>
  .bg_default {
    background-color: {{ section.settings.newsletter_bg_color }} !important;
  }
</style>

