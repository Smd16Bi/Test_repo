<form action="/search" method="get" class="input-group search-bar" role="search">
  {% comment %}<input type="hidden" name="type" value="product">{% endcomment %}
  <input type="search" name="q" value="{{ search.terms | escape }}" placeholder="{{ 'general.search.placeholder' | t }}" class="form-control" id="search_input" aria-label="{{ 'general.search.placeholder' | t }}">
  <button type="submit" class="btn icon-fallback-text search_icon"><i class="ion-ios-search-strong"></i></button>
</form>
